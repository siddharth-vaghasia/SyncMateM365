<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SyncMateM365</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SyncMateM365.styles.css" asp-append-version="true" />
    <link href='~/lib/fullcalendar/packages/core/main.css' rel='stylesheet' />
    <link href='~/lib/fullcalendar/packages/daygrid/main.css' rel='stylesheet' />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.1/main.min.css">
     <style>
body,h1,h2,h3,h4,h5,h6 {font-family: "Raleway", sans-serif}

body, html {
  height: 100%;
  line-height: 1.8;
}

/* Full height image header */
.bgimg-1 {
  background-position: center;
  background-size: cover;
  background-image: url("https://www.w3schools.com/w3images/mac.jpg");
  min-height: 100%;
}

.w3-bar .w3-button {
  padding: 16px;
}
.mb-3 {
    margin-bottom:0px !important;
}
.w3-white a, ul.w3-white span {
    color:white !important;
}
.font-black {
    color:black !important;
}
.container-padding{
    padding:10px 10px;
}
.user-name{
    margin-right:10px;
}

.footer-bar .copyright{
    line-height: 40px;
    text-align:left;
    margin-left:10px;
}
.footer-bar .to-the-top{
    float:right;
}
</style>
</head>
<body>
    <header>
        <nav class="navbar w3-white navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sync Mate M365</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Calendar" asp-action="Index">Calendar View</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Accounts">Manage Accounts</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="padding:0px;margin:0px;min-height:700px">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
<footer class="w3-center w3-black footer-bar">
     <div class='row'>
        <div class='col-sm-12 col-md-3 col-lg-3'>
             <div class='copyright'>Copyright Sync Mate M365</div>
        </div>
        <div class='col-sm-12 col-md-6 col-lg-6'>
             <!--<a target="_blank" href='#'><button type="button" class="btn btn-outline-light" style="margin-top: 3.5px;">Source code</button></a>-->
        </div>
        <div class='col-sm-12 col-md-3 col-lg-3'>
            <a href="#home" class="w3-button w3-pale-blue to-the-top"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a>
        </div>
     </div> 
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-player/1.4.3/lottie-player.js" integrity="sha512-gloNJjJNXOqLPOVxOJ/Sg9VN4jSPZpDdEQC+CDP0TczZ6OaOk0Ru1daFEOT/XAJY7fYABwFWVRXOx4HMFr6+lA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>


// Toggle between showing and hiding the sidebar when clicking the menu icon
var mySidebar = document.getElementById("mySidebar");

function w3_open() {
  if (mySidebar.style.display === 'block') {
    mySidebar.style.display = 'none';
  } else {
    mySidebar.style.display = 'block';
  }
}

// Close the sidebar with the close button
function w3_close() {
    mySidebar.style.display = "none";
}
</script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
